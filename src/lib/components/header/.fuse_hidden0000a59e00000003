<script lang="ts">
	import { goto } from '$app/navigation';
	import { Icon, Pencil, Trash } from 'svelte-hero-icons';

	export let problemId: string;

	async function onUpdate() {
		await goto(`/admin/edit/${problemId}`);
	}

	async function onDelete() {}
</script>

<div class="flex h-full space-x-2">
	<button on:click={onUpdate}><Icon src={Pencil} class="size-5" /></button>
	<button on:click={onDelete}><Icon src={Trash} class="size-5" /></button>
</div>

<style>
	button {
		@apply flex size-full items-center justify-center rounded border;
	}
</style>
